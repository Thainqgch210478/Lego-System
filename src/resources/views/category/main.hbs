<body>
{{!-- <li><a href="/category/add">Add Category</a></li> --}}
<div class="container mt-3">
    <h1>Category management</h1>
    <div class="text-right">
        <a type="button" class="btn btn-primary" href="/category/add">Add Category</a>
    </div>
    <table class="table table-bordered table-hover">
	<thead ">
		<tr>
            <th scope="col">Name</th>
			<th scope="col">Description</th>
			<th scope="col">Img</th>
            <th scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
        {{#each categories}}
            <tr>
                <td>
                        {{this.name}}     
                </td>
                <td>
                        {{this.description}}
                </td>
                <td>
                        <img class="img-thumbnail" alt="Cinque Terre" src="/img/Categories/{{this.img}}" alt="" width="110" height="100">      
                </td>
                <td class="text-right">
                        <a class="btn btn-primary" href="/category/edit/{{this._id}}">Edit</a>
                        <a class="btn btn-danger" href="/category/delete/{{this._id}}">Delete</a>    
                </td>
            </tr>   
        {{/each}}
	</tbody>
</table>

