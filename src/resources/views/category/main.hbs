<h1>Category management</h1>
<a class="btn btn-primary" href="/category/add">Add Category</a>
{{!-- <li><a href="/category/add">Add Category</a></li> --}}
<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">Name</th>
			<th scope="col">Description</th>
			<th scope="col">Img</th>
            <th scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
        {{#each categories}}
            <tr>
                <td>
                    <h1>
                        {{this.name}}  
                    </h1>     
                </td>
                <td>
                    <h1>
                        {{this.description}}
                    </h1>
                </td>
                <td>
                    <h1>
                        <img src="/img/Categories/{{this.img}}" alt="" width="110" height="100">
                    </h1>        
                </td>
                <td>
                    <h1>
                        <a class="btn btn-primary" href="/category/edit/{{this._id}}">Edit</a>
                        <a class="btn btn-danger" href="/category/delete/{{this._id}}">Delete</a> 
                    </h1>    
                </td>
            </tr>   
        {{/each}}
	</tbody>
</table>

</div>

